<div class="container mt-5">
  <div class="row">
    <div class="col-12" style="text-align: center;">
      <a href="/">
        <h1>短網址產生器</h1>
      </a>
      <img src="img/url shortener.png" style="width:350px;" alt="">
    </div>
  </div>

  {{>messages}}
  <div class="row">
    <form action="/" method="POST" class="col-8 mx-auto text-center mt-3">
      <div class="form-group">
        <label for="url">取得短網址</label>
        <input type="text" class="form-control col-8 mx-auto" id="url" name="url" placeholder="輸入網址" value={{{url}}}>
      </div>

      <button type="submit" class="btn btn-primary">產生</button>
    </form>
  </div>

  {{#if url_shorten}}
  <div class="row">
    <div class="col-8 mx-auto text-center mt-5">
      <h4>你的縮網址為</h4>
      <div>
        <a class="col-5" id="url-short">
          localhost:3000/s/{{{url_shorten}}}
        </a>
      </div>
    </div>
  </div>
  {{/if}}
</div>